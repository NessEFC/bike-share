<div class="page-header">
  <h1 class="title text-right station-name"><%= @station.name %></h1><br/>
</div>

<p>Bike Capacity: <%= @station.dock_count %><br></p>
<p>Installation Date: <%= @station.installation_date %></p>
<p>City: <%= @station.city.name %></p>

<button type="button"><a href="/stations/<%= @station.id %>/edit">Edit</a></button>

<form action="/stations/<%= @station.id %>" method="post">
  <div class="form-group">
    <input type="hidden" name="_method" value="DELETE" />
    <input type="submit" value="Delete">
  </div>
</form>
